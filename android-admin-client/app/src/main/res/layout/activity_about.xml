      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:layout_marginBottom="16dp"
          app:cardCornerRadius="3dp"
          android:layout_marginLeft="@dimen/activity_horizontal_margin"
          android:layout_marginRight="@dimen/activity_horizontal_margin"
          app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:orientation="vertical">
          <ImageView
              android:layout_width="100dp"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="20dp"
              android:elevation="4dp"
              android:layout_height="100dp"
              android:src="@mipmap/ic_launcher_round"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="PANTHEON"
              android:layout_marginTop="24dp"
              android:layout_gravity="center_horizontal"
              android:letterSpacing="0.5"
              android:textColor="@color/darkGray"
              android:textSize="16sp"
              android:textAllCaps="true"
              android:textStyle="bold"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Pantheon is the bi-annual fest of RNS Institute of Technology. This app serves as a helpful companion for all attendees. The app also features a photos section where attendees can share pictures."
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:layout_marginTop="16dp"
              android:lineSpacingExtra="3dp"
              android:ellipsize="end"
              android:textAlignment="center"
              android:textSize="16sp"
              android:textStyle="normal"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="This app has been created by\n Prateek Phoenix"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:layout_marginTop="16dp"
              android:layout_gravity="center_horizontal"
              android:lineSpacingExtra="3dp"
              android:ellipsize="end"
              android:textAlignment="center"
              android:textSize="16sp"
              android:textStyle="normal"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/links_tv"
              android:textColorHighlight="?android:colorPrimary"
              android:textColorLink="#4aa87a"
              android:text="Twitter | Website"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:layout_marginTop="16dp"
              android:layout_gravity="center_horizontal"
              android:lineSpacingExtra="3dp"
              android:ellipsize="end"
              android:textAlignment="center"
              android:textSize="16sp"
              android:textStyle="normal"/>

          <TextView
              android:layout_width="wrap_content"
              android:id="@+id/repo_tv"
              android:layout_height="wrap_content"
              android:text="The source code will be available on Github"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:layout_marginTop="16dp"
              android:textColorHighlight="?android:colorPrimary"
              android:textColorLink="#4aa87a"
              android:layout_marginBottom="@dimen/activity_horizontal_margin"
              android:layout_gravity="center_horizontal"
              android:lineSpacingExtra="3dp"
              android:ellipsize="end"
              android:textAlignment="center"
              android:textSize="16sp"
              android:textStyle="normal"/>
        </LinearLayout>



</android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:layout_marginBottom="16dp"
          app:cardCornerRadius="3dp"
          android:layout_marginLeft="@dimen/activity_horizontal_margin"
          android:layout_marginRight="@dimen/activity_horizontal_margin"
          app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="TICKETS"
              android:layout_marginTop="16dp"
              android:layout_gravity="center_horizontal"
              android:letterSpacing="0.3"
              android:textColor="@color/darkGray"
              android:textSize="16sp"
              android:textAllCaps="true"
              android:textStyle="bold"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:text="Tickets for the Julia Bliss concert are currently on sale. Buy them before they are sold out."
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:layout_marginTop="16dp"
              android:lineSpacingExtra="3dp"
              android:ellipsize="end"
              android:textAlignment="center"
              android:textSize="16sp"
              android:textStyle="normal"/>
          <com.facebook.shimmer.ShimmerFrameLayout
              android:layout_width="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="20dp"
              android:layout_marginBottom="20dp"
              android:id="@+id/shimmer_view"
              android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:letterSpacing="0.2"
                android:background="@drawable/buy_bg"
                android:textColor="@color/white"
                android:id="@+id/book_now"
                android:textSize="24sp"
                android:text="Book Now"/>
          </com.facebook.shimmer.ShimmerFrameLayout>
        </LinearLayout>

      </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1200dp"
             android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="OUR SPONSORS"
               android:layout_marginTop="16dp"
               android:layout_gravity="center_horizontal"
               android:letterSpacing="0.3"
               android:textColor="@color/darkGray"
               android:textSize="16sp"
               android:textAllCaps="true"
               android:textStyle="bold"/>

           <android.support.v7.widget.RecyclerView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:nestedScrollingEnabled="false"
               android:layout_gravity="center_horizontal"
               android:layout_marginLeft="@dimen/activity_horizontal_margin"
               android:layout_marginRight="@dimen/activity_horizontal_margin"
               android:layout_marginTop="20dp"
               android:id="@+id/sponsors_rv"/>
         </LinearLayout>
        </android.support.v7.widget.CardView>



</LinearLayout>
</ScrollView>


</android.support.design.widget.CoordinatorLayout>
